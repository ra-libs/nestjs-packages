{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@will-bank/athena": ["libs/athena/src/index.ts"],
      "@will-bank/commons": ["libs/commons/src/index.ts"],
      "@will-bank/growthbook": ["libs/growthbook/src/index.ts"],
      "@will-bank/logger": ["libs/logger/src/index.ts"],
      "@will-bank/metrics": ["libs/metrics/src/index.ts"],
      "@will-bank/s3": ["libs/s3/src/index.ts"],
      "@will-bank/secrets-manager": ["libs/secrets-manager/src/index.ts"],
      "@will-bank/sns": ["libs/sns/src/index.ts"],
      "@will-bank/sqs": ["libs/sqs/src/index.ts"],
      "@will-bank/ssm": ["libs/ssm/src/index.ts"],
      "@will-bank/unleash": ["libs/unleash/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
